/**index.wxss**/
page {
  background: white;
}
.container {
}
.search {
  position: absolute;
  top: 8px;
  left: 0;
  height: 32px;
  width: calc(100% - 30px);
  line-height: 32px;
  margin: 0 15px;
  border: 1px solid #7a3ce9;
  border-radius: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  box-sizing: border-box;
  background-color: rgba(255,255,255,0.8);
}
.banner {
  height: 200px;
}
.banner-image {
  width: 100%;
  height: 200px;
}
.sub-title {
  margin: 10px 0;
  text-align: center;
  font-size: 20px;
  font-weight: 600;
}
.commodity {
  width: 50%;
  padding: 15px;
  box-sizing: border-box;
}
.commodity-image {
  width: 100%;
  height: 100%;
}
.commodity-text {
  color: black;
  font-size: 30rpx;
}
