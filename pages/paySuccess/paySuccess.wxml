<image src="/images/bg2.jpg" 
  style="position:absolute;top:0;left:0;width:100vw;height:100vh;z-index:-1" />

<view style="height:100vh;">
  <view style="font-size:28px;font-weight:bold;text-align:center;padding:25vh 0 18vh;">支付完成</view>
  <view style="padding:30px;box-sizing:border-box;display:flex;justify-content:space-around;">
