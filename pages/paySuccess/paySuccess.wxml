    <navigator 
      style="position:relative;display:inline-block;height:47px;width:100px;line-height:40px;text-align:center;padding-right:12px;box-sizing:border-box;"
      url="/pages/order/order?id={{id}}">
      <image src="/images/border.png" style="position:absolute;top:0;left:0;;width:100%;height:100%;z-index:-1" />
      <text>查看订单</text>
