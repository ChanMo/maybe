/**app.wxss**/

/**
 * primary: #7a3ce9
 * secondary: 
 * price: #f30909
 * white: white
 * bg: 
 * dark: black
 * lightgrey: #a6a4a9
 * darkgrey: #5c5c5c text
 */

page {
  background: #f5f5f5;
  font-size: 14px;
}

.mb5 {
  margin-bottom: 5px;
}
.mb10 {
  margin-bottom: 10px;
}
.mt5 {
  margin-top: 5px;
}
.mt10 {
  margin-top: 10px;
}
.mt20 {
  margin-top: 20px;
}
.border-primary {
  border-color: #7a3ce9 !important;
}
.bg-primary {
  background-color: #7a3ce9 !important;
}

/**
 * button
 */
.button {
  display: inline-block;
  border-radius: 2px;
  padding: 5px 20px;
  font-size: 14px;
}
.button-block {
  display: block;
  text-align: center;
  padding: 10px 15px !important;
  margin: 0 10px 10px;
}
.button-big {
  padding: 15px 30px !important;
}
.button-small {
  font-size: 12px !important;
  padding: 2px 10px !important;
}
.button-primary {
  background-color: #7a3ce9 !important;
  color: white;
}

.price {
  font-size: 16px;
  font-weight: 600;
  color: #f30909;
}
.float-right {
  float: right;
}

/**
 * font
 */
text {
  color: #202021;
  font-size: 14px;
}
.h1 {
  display: block;
  font-size: 22px;
  font-weight: bold;
}
.h2 {
  display: block;
  font-size: 18px;
  font-weight: bold;
}
.h3 {
  display: block;
  font-size: 16px;
  font-weight: bold;
}
.h4 {
  display: block;
  font-size: 14px;
}
.small {
  font-size: 12px;
}

/** text color **/
.text-white {
  color: white;
}
.text-primary {
  color: #7a3ce9 !important;
}
.text-dark {
  color: #333;
}
.text-secondary {
  color: #505050;
  font-size: 32rpx;
}
.text-grey {
  color: #a6a4a9;
}

/** size **/
.text-medium {
  font-size: 14px;
}
.text-small {
  font-size: 12px;
}

/** font position **/
.text-center {
  text-align: center;
}
.text-right {
  text-align: right;
}


/** horizontal view **/
.row {
  display: flex;
  align-items: center;
}
.row_between {
  justify-content: space-between;
}

.flex_bottom {
  align-self: flex-end
}

/** view **/
.section {
  background: white;
  margin-bottom: 5px;
  padding: 10px;
  overflow: hidden;
}

/** commodity **/
.commodity-section {
  display: flex;
  background: white;
  padding: 10px;
}
.commodity-section__cover {
  width: 120px;
  height: 120px;
}
.commodity-section__right {
  flex-grow: 1;
  padding-left: 10px;
}
